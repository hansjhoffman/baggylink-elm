{
  "name": "baggylink",
  "description": "UI for Bagheera url shortener",
  "version": "1.0.0",
  "main": "main.ts",
  "license": "MIT",
  "engines": {
    "node": ">=12.22.0"
  },
  "scripts": {
    "build": "make build",
    "format": "make format",
    "format:elm": "make format-elm",
    "format:ts": "make format-ts",
    "lint": "make lint",
    "lint:elm": "make lint-elm",
    "lint:ts": "make lint-ts",
    "lint:elm:fix": "make lint-elm-fix",
    "lint:ts:fix": "make lint-ts-fix",
    "prepare": "is-ci || husky install",
    "preview": "make preview",
    "schema": "make schema",
    "start": "make run",
    "test": "make test"
  },
  "devDependencies": {
    "@dillonkearns/elm-graphql": "^4.2.2",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "autoprefixer": "^10.4.0",
    "elm-ts-interop": "^0.0.8",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.1.3",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4",
    "vite": "^2.7.3",
    "vite-plugin-elm": "^2.5.1"
  },
  "dependencies": {
    "fp-ts": "^2.11.5",
    "ts-pattern": "^3.3.3"
  },
  "lint-staged": {
    "**/*.elm": [
      "elm-format --yes"
    ],
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
